<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imageviewbaihathot"
        />

    <TextView
        android:id="@+id/textbaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tên Bài Hát"
        android:textColor="#363636"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textviewcasibaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textbaihathot"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewbaihathot"
        android:maxLines="1"
        android:text="Ca Sĩ"
        android:textColor="#8c8a8a"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageviewdownload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/imageviewluotthich"
        android:src="@drawable/icondownload" />

    <ImageView
        android:id="@+id/imageviewluotthich"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove" />
</RelativeLayout>