<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_play_nhac"
    tools:context=".Activity.PlayNhacActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/activityPlayNhac_toolBar"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/activityPlayNhac_viewPager"
        android:layout_weight="8"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:id="@+id/activityPlayNhac_timeStart"
                android:layout_weight="1"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:id="@+id/activityPlayNhac_seekBar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activityPlayNhac_timeEnd"
                android:layout_weight="0.5"
                android:text="00:00"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffff"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <ImageButton
                android:id="@+id/activityPlayNhac_btnSuffle"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconsuffle" />
            <ImageButton
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/activityPlayNhac_btnPrevious"
                android:background="@null"
                android:src="@drawable/iconpreview"
                android:layout_weight="1"/>
            <ImageButton
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/activityPlayNhac_btnPlay"
                android:background="@null"
                android:src="@drawable/iconplay"
                android:layout_weight="1"/>
            <ImageButton
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/activityPlayNhac_btnNext"
                android:background="@null"
                android:src="@drawable/iconnext"
                android:layout_weight="1"/>
            <ImageButton
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/activityPlayNhac_btnRepeat"
                android:background="@null"
                android:src="@drawable/iconrepeat"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>